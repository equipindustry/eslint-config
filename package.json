{
  "name": "@equipindustry/eslint-config",
  "description": "Shared ESLint config for Equipindustry projects",
  "version": "0.2.0",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+htps://github.com/equipindustry/eslint-config.git"
  },
  "keywords": [
    "eslint",
    "lint",
    "formatting"
  ],
  "files": [
    ".eslintrc.js",
    "eslint"
  ],
  "main": ".eslintrc.js",
  "scripts": {
    "semantic-release": "semantic-release",
    "lint": "eslint -c ./.eslintrc.js ./ --ext .js,.jsx,.mjs,.d.ts,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier '**/*.{js?(on),ts?(x),scss,md,yml}' --write=false --list-different",
    "prettier:fix": "yarn prettier --write=true"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "yarn precommit"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@equipindustry/prettierrc": "^0.2.0",
    "@equipindustry/tsconfig": "^0.1.0",
    "husky": "^4.2.5",
    "react": "^16.13.1",
    "typescript": "^3.8.3",
    "semantic-release": "^17.0.7"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "engines": {
    "node": ">=8"
  },
  "publishConfig": {
    "access": "public"
  }
}
